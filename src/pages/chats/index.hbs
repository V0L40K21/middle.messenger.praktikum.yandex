<div class='chats'>
	<div class='chats__leftSide'>
		<div class='chats__leftSide__menu'>
			{{{Link
				class='chats__leftSide__menu__link'
				text='Профиль'
				onClick=this.onClick
			}}}
			<form action='' class='chats__leftSide__menu__form'>
				{{{Input
					class='chats__leftSide__menu__form__input'
					placeholder='Поиск'
					name='search'
				}}}
			</form>
		</div>
		<div class='chats__leftSide__list'>
			{{#each this.dialogs}}
				{{{ChatListItem
					name=this.name
					message=this.message
					time=this.time
					count=this.count
				}}}
			{{/each}}
		</div>
	</div>
	<div class='chats__rightSide'>
		{{{ChatsHeader}}}
		<div style='flex: 1;'></div>
		{{{ChatsBottom}}}
	</div>
</div>