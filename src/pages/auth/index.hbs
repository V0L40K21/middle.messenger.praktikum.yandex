<div class='auth'>
	<div class='auth__container'>
		<h1 class='auth__header'>Вход</h1>
		<form class='auth__form'>
			<div class='auth__form__inputs'>
				{{#each inputs}}
					{{{Input
						name=this.name
						class=this.class
						placeholder=this.placeholder
						type=this.type
					}}}
				{{/each}}
			</div>
			<div class='auth__buttons'>
				{{#with button}}
					{{{Button class=class text=text onClick=this.onClick}}}
				{{/with}}
				{{#with link}}
					{{{Link class=class text=text onClick=this.onClick}}}
				{{/with}}
			</div>
		</form>
	</div>
</div>