<div class='messenger'>
	{{#if selectedChat}}
		<div>{{{header}}}</div>
		<div class='messenger__messages'>
			{{#if messages}}
				{{#each messages}}
					{{{this}}}
				{{/each}}
			{{else}}
				Сообщний нет
			{{/if}}
		</div>
		<div class='messenger__footer'>
			{{{input}}}
			{{{button}}}
		</div>
	{{else}}
		Выбирете чат
	{{/if}}
</div>